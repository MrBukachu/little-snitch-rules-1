{
  "$id": "http://example.com/example.json",
  "type": "object",
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "properties": {
    "description": {
      "$id": "/properties/description",
      "type": "string",
      "title": "Description of the rule group",
      "default": "",
      "examples": [
        "This rule allows LaunchBar to check for updates."
      ]
    },
    "name": {
      "$id": "/properties/name",
      "type": "string",
      "title": "Name of the rule group",
      "default": "",
      "examples": [
        "LaunchBar Software Update"
      ]
    },
    "rules": {
      "$id": "/properties/rules",
      "type": "array",
      "items": {
        "$id": "/properties/rules/items",
        "type": "object",
        "properties": {
          "action": {
            "$id": "/properties/rules/items/properties/action",
            "type": "string",
            "title": "Rule action",
            "default": "",
            "examples": [
              "allow"
            ]
          },
          "ports": {
            "$id": "/properties/rules/items/properties/ports",
            "type": "string",
            "title": "Ports the rule matches",
            "default": "",
            "examples": [
              "443"
            ]
          },
          "process": {
            "$id": "/properties/rules/items/properties/process",
            "type": "string",
            "title": "Process the rule matches",
            "default": "",
            "examples": [
              "/Applications/Viscosity.app/Contents/MacOS/Viscosity"
            ]
          },
          "protocol": {
            "$id": "/properties/rules/items/properties/protocol",
            "type": "string",
            "title": "Process the rule matches",
            "default": "",
            "examples": [
              "tcp",
              "udp"
            ]
          },
          "remote-hosts": {
            "$id": "/properties/rules/items/properties/remote-hosts",
            "type": "string",
            "title": "Remote hosts the rule matches",
            "default": "",
            "examples": [
              "secure.sparklabs.com"
            ]
          }
        }
      }
    }
  }
}
